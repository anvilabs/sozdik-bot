{
  "name": "sozdik-bot",
  "version": "1.0.0",
  "description": "Telegram and Messenger bot for Sozdik, a Russian to Kazakh dictionary",
  "keywords": [
    "telegram bot",
    "messenger bot",
    "fb bot"
  ],
  "homepage": "https://github.com/anvilabs/sozdik-bot",
  "repository": "anvilabs/sozdik-bot",
  "license": "MIT",
  "author": {
    "name": "Ayan Yenbekbay",
    "email": "ayan.yenb@gmail.com",
    "url": "http://yenbekbay.me"
  },
  "engines": {
    "node": ">=6.0",
    "npm": ">=3.0"
  },
  "files": [
    "build/",
    ".env",
    "pm2.json"
  ],
  "scripts": {
    "deploy": "sh ./scripts/deploy.sh",
    "start": "nodemon src/index.js",
    "build": "npm run clean && babel --out-dir ./build --ignore **/__tests__,**/__mocks__ ./src",
    "clean": "rimraf build && mkdir build",
    "test": "npm-run-all --parallel typecheck lint jest",
    "test:ci": "npm-run-all --parallel typecheck lint jest:coverage && codecov",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "typecheck": "flow check ./src",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm test"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "setupFiles": [
      "scripts/jest-env.js"
    ],
    "testEnvironment": "node",
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "testRegex": "/__tests__/.*-test\\.js$",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 72,
      "types": "conventional-commit-types"
    }
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "body-parser": "^1.15.2",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "localtunnel": "^1.8.1",
    "lodash": "^4.16.2",
    "mixpanel": "^0.5.0",
    "morgan": "^1.7.0",
    "remove-markdown": "^0.1.0",
    "request": "^2.75.0",
    "request-promise": "^4.1.1",
    "to-markdown": "^3.0.1",
    "winston": "^2.2.0",
    "winston-papertrail": "^1.0.3"
  },
  "devDependencies": {
    "@types/body-parser": "^0.0.33",
    "@types/dotenv": "^2.0.18",
    "@types/express": "^4.0.33",
    "@types/lodash": "^4.14.37",
    "@types/mixpanel": "^0.0.28",
    "@types/morgan": "^1.7.32",
    "@types/request": "^0.0.32",
    "@types/request-promise": "^3.0.32",
    "@types/winston": "^0.0.28",
    "babel-cli": "^6.16.0",
    "babel-jest": "^16.0.0",
    "babel-plugin-lodash": "^3.2.9",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.7.0",
    "eslint-config-anvilabs": "^2.0.1",
    "flow-bin": "^0.34.0",
    "husky": "^0.11.9",
    "jest-cli": "^16.0.0",
    "nodemon": "^1.10.2",
    "npm-run-all": "^3.1.0",
    "rimraf": "^2.5.4",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0",
    "validate-commit-msg": "^2.8.2"
  }
}
