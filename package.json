{
  "name": "sozdik-bot",
  "version": "0.0.0",
  "description": "Telegram and Messenger bot for Sozdik, a Russian to Kazakh dictionary",
  "private": true,
  "homepage": "https://github.com/anvilabs/sozdik-bot",
  "repository": "anvilabs/sozdik-bot",
  "license": "GPL-3.0",
  "author": {
    "name": "Ayan Yenbekbay",
    "email": "ayan.yenb@gmail.com",
    "url": "http://yenbekbay.me"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "typecheck": "flow .",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "test": "npm-run-all --parallel typecheck lint jest",
    "test:ci": "npm-run-all --parallel typecheck lint jest:coverage && codecov",
    "start": "nodemon src/server.js",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm test",
    "clean": "rimraf build && mkdir build",
    "build": "npm run clean && babel --out-dir ./build --ignore **/__tests__,**/__mocks__ ./src",
    "deploy": "sh ./scripts/deploy.sh"
  },
  "lint-staged": {
    "{*.js,{scripts,src}/**/*.js}": ["eslint --cache --fix", "git add"],
    "{*.json,.vscode/*.json}": ["prettier --write", "git add"]
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.js"],
    "coverageReporters": ["lcov"],
    "roots": ["<rootDir>/src"],
    "setupFiles": ["./scripts/jest-env.js"],
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*-test\\.js$"
  },
  "config": {
    "validate-commit-msg": {
      "maxSubjectLength": 72,
      "types": "conventional-commit-types"
    }
  },
  "dependencies": {
    "babel-runtime": "^6.25.0",
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "localtunnel": "^1.8.3",
    "lodash": "^4.17.4",
    "mixpanel": "^0.7.0",
    "morgan": "^1.8.2",
    "remove-markdown": "^0.2.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "to-markdown": "^3.1.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "codecov": "^2.3.0",
    "eslint": "^4.3.0",
    "eslint-config-anvilabs": "^10.2.0",
    "flow-bin": "^0.52.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "nodemon": "^1.10.2",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2",
    "validate-commit-msg": "^2.14.0"
  }
}
