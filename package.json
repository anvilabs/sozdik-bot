{
  "name": "sozdik-bot",
  "version": "1.0.0",
  "description": "Telegram and Messenger bot for Sozdik, a Russian to Kazakh dictionary",
  "homepage": "https://github.com/anvilabs/sozdik-bot",
  "repository": "anvilabs/sozdik-bot",
  "license": "MIT",
  "author": {
    "name": "Ayan Yenbekbay",
    "email": "ayan.yenb@gmail.com",
    "url": "http://yenbekbay.me"
  },
  "engines": {
    "node": ">=5.0",
    "npm": ">=3.0"
  },
  "scripts": {
    "deploy": "sh ./scripts/deploy.sh",
    "start": "nodemon src/index.js",
    "build": "npm run clean && babel --out-dir ./build --ignore **/__tests__ --ignore **/__mocks__ ./src",
    "clean": "rimraf build && mkdir build",
    "test": "npm run typecheck && npm run lint && npm run jest",
    "test:ci": "npm run typecheck && npm run lint && npm run jest-coverage -- -i && codecov",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "typecheck": "flow check ./src"
  },
  "jest": {
    "coverageReporters": [
      "json"
    ],
    "setupFiles": [
      "scripts/jest-env.js"
    ],
    "testEnvironment": "node",
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "testRegex": "/__tests__/.*-test\\.js$",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "body-parser": "^1.15.2",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "fbmessenger": "^2.0.3",
    "localtunnel": "^1.8.1",
    "lodash": "^4.15.0",
    "mixpanel": "^0.4.1",
    "node-telegram-bot-api": "^0.23.3",
    "remove-markdown": "^0.1.0",
    "request": "^2.74.0",
    "request-promise": "^4.1.1",
    "to-markdown": "^3.0.1",
    "winston": "^2.2.0",
    "winston-papertrail": "^1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-lodash": "^3.2.8",
    "babel-jest": "^16.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "codecov": "^1.0.1",
    "eslint": "^3.7.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-lodash-fp": "^2.0.1",
    "eslint-plugin-no-use-extend-native": "^0.3.8",
    "eslint-plugin-promise": "^2.0.1",
    "jest-cli": "^16.0.0",
    "nodemon": "^1.10.2",
    "rimraf": "^2.5.4"
  }
}
